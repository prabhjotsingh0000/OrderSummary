<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cart_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_margin="5dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:id="@+id/cart_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/med_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dusky_blue_two"
                android:text="ALBUMIN, 24 HRS URINE" />

            <ImageView
                android:id="@+id/fav_med_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="21dp"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp">


            <LinearLayout
                android:id="@+id/service_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/service_type_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Service Type"
                    android:textColor="@color/dusky_blue_two"
                    android:layout_weight="0.3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/service_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="laboratory Services"
                    android:textSize="14sp"
                    android:textColor="@color/dusky_blue_two"
                    android:layout_weight="0.7"
                    android:alpha="0.7" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/dusky_blue_two"
                    android:layout_weight="0.3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/description_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ALBUMIN, 24 HRS URINE"
                    android:textSize="14sp"
                    android:textColor="@color/dusky_blue_two"                   android:layout_weight="0.7"
                    android:alpha="0.7" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/priority_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/priority_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Priority"
                    android:textColor="@color/dusky_blue_two"
                    android:layout_weight="0.3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/priority_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Routine"
                    android:textSize="14sp"
                    android:textColor="@color/dusky_blue_two"                   android:layout_weight="0.7"
                    android:alpha="0.7" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/remarks_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/remarks_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Remarks"
                    android:textColor="@color/dusky_blue_two"
                    android:layout_weight="0.3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/remarks_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Urinary Infection"
                    android:textSize="14sp"
                    android:textColor="@color/dusky_blue_two"
                    android:layout_weight="0.7"
                    android:alpha="0.7" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:paddingBottom="10dp"
                >


                <TextView
                    android:id="@+id/delete_item_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Delete"
                    android:clickable="true"
                    android:textSize="14sp"
                    android:layout_marginRight="24dp"
                    android:textColor="@color/tealish"
                    />

                <TextView
                    android:id="@+id/edit_item_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/delete_item_button"
                    android:layout_marginTop="25dp"
                    android:text="Edit"
                    android:clickable="true"
                    android:textSize="14sp"
                    android:textColor="@color/tealish"
                    android:layout_marginRight="20dp" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
